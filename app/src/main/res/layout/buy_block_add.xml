<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/view_background_color" >

    <!-- Buy Date -->
    <LinearLayout android:id="@+id/buy_block_row_buy_date"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginLeft="5sp"
                  android:layout_marginRight="5sp"
                  >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content" 
                  android:layout_gravity="center_vertical"
                  android:text="Buy Date:"
                  android:textColor="@color/normal_text_color"              
                  android:textSize="25sp"              
                  />
        <Button android:id="@+id/buy_block_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:textColor="@color/button_text_color"
                />
    </LinearLayout>
    
    <!-- Buy Price -->
    <LinearLayout android:id="@+id/buy_block_row_buy_price"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="10sp"
                  android:layout_marginLeft="5sp"
                  android:layout_marginRight="5sp"                                    
                  >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content" 
                  android:layout_gravity="center_vertical"
                  android:text="Buy Price:"
                  android:textColor="@color/normal_text_color" 
                  android:textSize="25sp"              
                   />
        <EditText android:id="@+id/buy_block_price"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:inputType="numberDecimal"
                  android:layout_marginLeft="10sp"
                  android:background="@color/normal_text_color"
                  android:textSize="25sp"
                   />
    </LinearLayout>
    
    <!-- Number of Shares -->
    <LinearLayout android:id="@+id/buy_block_row_num_shares"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="15sp"
                  android:layout_marginLeft="5sp"
                  android:layout_marginRight="5sp"
                  >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content" 
                  android:layout_gravity="center_vertical"
                  android:text="# of Shares:"
                  android:textColor="@color/normal_text_color"              
                  android:textSize="25sp"              
                  />
        <EditText android:id="@+id/buy_block_num_shares"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:inputType="numberDecimal"
                  android:layout_marginLeft="10sp"
                  android:background="@color/normal_text_color"
                  android:textSize="25sp"
                  />
    </LinearLayout>
    
    <!-- Account -->
    <LinearLayout android:id="@+id/buy_block_row_account"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="10sp"
                  android:layout_marginLeft="5sp"
                  android:layout_marginRight="5sp"
                  >
        <TextView android:id="@+id/buy_block_account_color_field"
                  android:layout_width="30sp"
                  android:layout_height="30sp" 
                  android:layout_gravity="center_vertical"
                  />

        <TextView android:id="@+id/buy_block_account_name_text_view"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="10sp"
                  android:layout_marginRight="10sp"
                  android:textColor="@color/normal_text_color"
                  android:textSize="20sp"
                   />
        
        <Button android:id="@+id/buy_block_account_change_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Change Account"
                android:textColor="@color/button_text_color"
                android:onClick="chooseAccountColorClicked"
                android:layout_marginLeft="10sp"
                />
    </LinearLayout>
    
    
    <!-- Done button -->
    <Button android:id="@+id/buy_block_done_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="@color/button_text_color"
            android:onClick="doneButtonClicked"
            android:layout_marginTop="50sp"            
            />
    
</LinearLayout>