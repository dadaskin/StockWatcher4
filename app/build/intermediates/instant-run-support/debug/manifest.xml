<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adaskin.android.stockwatcher4"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="com.adaskin.android.stockwatcher4.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.adaskin.android.stockwatcher4.views.OwnedAddActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.adaskin.android.stockwatcher4.views.OwnedDetailsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.adaskin.android.stockwatcher4.views.WatchAddActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.adaskin.android.stockwatcher4.views.WatchDetailsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.adaskin.android.stockwatcher4.views.BuyBlockAddActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.adaskin.android.stockwatcher4.views.ChangeParameterActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.adaskin.android.stockwatcher4.views.GenericDetailsActivity" />

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="com.adaskin.android.stockwatcher4.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>