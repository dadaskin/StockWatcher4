<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:orientation="horizontal"
    android:background="@color/list_background_color" >
    
    <TextView
        android:id="@+id/overall_account_color_field_id"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:textColor="#cccccc"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        />
    
    <TextView
        android:id="@+id/symbol_field_id"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="26"
        android:textColor="#cccccc"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingLeft="5sp"
        android:gravity="center_vertical"
        />
        
    <TextView 
        android:id="@+id/pps_field_id"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="26"
        android:textColor="#cccccc"
        android:textSize="18sp"
        android:textStyle="normal"
        android:gravity="center"
        android:background="@drawable/highlight_shape"
        android:layout_margin="3sp"
        />
    
    <TextView 
        android:id="@+id/chng_close_field_id"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="18"
        android:textColor="#cccccc"
        android:textSize="18sp"
        android:textStyle="normal"
        android:gravity="center"
        />
    
    <TextView
        android:id="@+id/last_q_field_id"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="26"
        android:textColor="#cccccc"
        android:textSize="18sp"
        android:textStyle="normal"    
        android:gravity="center"
        android:layout_margin="3sp"
        android:background="@drawable/highlight_shape"
        />
    
</LinearLayout>