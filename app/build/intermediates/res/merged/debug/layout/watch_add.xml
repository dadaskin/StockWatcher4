<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/view_background_color"     >
    
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content" 
              android:text="Symbol:"
              android:textColor="@color/normal_text_color"
              android:layout_marginTop="20sp"
              android:textSize="25sp"
               />
    
    <EditText android:id="@+id/watch_add_symbol"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:inputType="textCapCharacters"
              android:background="@color/normal_text_color"
              android:textSize="25sp"              
              />
    
    <TextView android:layout_width="wrap_content" 
              android:layout_height="wrap_content"
              android:text="Strike Price:"
              android:textColor="@color/normal_text_color"
              android:layout_marginTop="30sp"
              android:textSize="25sp"              
              />
    
    <EditText android:id="@+id/watch_add_strike_price"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:inputType="numberDecimal"
              android:background="@color/normal_text_color"  
              android:textSize="25sp"          
              />
    
    <Button android:id="@+id/watch_add_done_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="@color/button_text_color"
            android:onClick="doneButtonClicked"
            android:layout_marginTop="30sp"
            />
    
</LinearLayout>